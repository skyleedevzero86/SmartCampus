<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sleekydz86.server.market.coupon.infrastructure.mapper.CouponMapper">

    <resultMap id="CouponResultMap" type="com.sleekydz86.server.market.coupon.domain.Coupon">
        <id property="id" column="id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <association property="description" javaType="com.sleekydz86.server.market.coupon.domain.Description">
            <result property="name" column="name"/>
            <result property="content" column="content"/>
        </association>
        <association property="policy" javaType="com.sleekydz86.server.market.coupon.domain.Policy">
            <result property="canUseAlone" column="can_use_alone"/>
            <result property="isDiscountPercentage" column="is_discount_percentage"/>
            <result property="amount" column="amount"/>
        </association>
    </resultMap>

    <select id="findById" resultMap="CouponResultMap">
        SELECT id, name, content, can_use_alone, is_discount_percentage, amount, created_at, updated_at
        FROM coupon
        WHERE id = #{id}
    </select>

    <select id="findAllByIdIn" resultMap="CouponResultMap">
        SELECT id, name, content, can_use_alone, is_discount_percentage, amount, created_at, updated_at
        FROM coupon
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="countAllByIdIn" resultType="int">
        SELECT COUNT(*)
        FROM coupon
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="executeCouponCUD" statementType="CALLABLE" parameterType="map">
        {CALL sp_coupon_cud(
            #{operation, mode=IN, jdbcType=CHAR},
            #{id, mode=IN, jdbcType=BIGINT},
            #{name, mode=IN, jdbcType=VARCHAR},
            #{content, mode=IN, jdbcType=LONGVARCHAR},
            #{canUseAlone, mode=IN, jdbcType=BOOLEAN},
            #{isDiscountPercentage, mode=IN, jdbcType=BOOLEAN},
            #{amount, mode=IN, jdbcType=INTEGER},
            #{resultMessage, mode=OUT, jdbcType=VARCHAR},
            #{affectedRows, mode=OUT, jdbcType=INTEGER}
        )}
    </select>

</mapper>

