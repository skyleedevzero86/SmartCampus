<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.server.community.infrastructure.comment.mapper.CommentMapper">

    <resultMap id="CommentResultMap" type="com.server.community.domain.comment.Comment">
        <id property="id" column="id"/>
        <result property="content" column="content"/>
        <result property="writerId" column="writer_id"/>
        <result property="boardId" column="board_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comment (content, writer_id, board_id, created_at, updated_at)
        VALUES (#{content}, #{writerId}, #{boardId}, NOW(), NOW())
    </insert>

    <select id="findById" resultMap="CommentResultMap">
        SELECT id, content, writer_id, board_id, created_at, updated_at
        FROM comment
        WHERE id = #{id}
    </select>

    <delete id="deleteById">
        DELETE FROM comment WHERE id = #{id}
    </delete>

</mapper>




