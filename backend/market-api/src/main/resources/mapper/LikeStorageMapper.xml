<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.server.community.infrastructure.board.mapper.LikeStorageMapper">

    <resultMap id="LikeStorageResultMap" type="com.server.community.domain.board.LikeStorage">
        <id property="id" column="id"/>
        <result property="boardId" column="board_id"/>
        <result property="memberId" column="member_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO like_storage (board_id, member_id, created_at, updated_at)
        VALUES (#{boardId}, #{memberId}, NOW(), NOW())
    </insert>

    <select id="existsByBoardIdAndMemberId" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM like_storage
        WHERE board_id = #{boardId} AND member_id = #{memberId}
    </select>

    <delete id="deleteByBoardIdAndMemberId">
        DELETE FROM like_storage
        WHERE board_id = #{boardId} AND member_id = #{memberId}
    </delete>

</mapper>




